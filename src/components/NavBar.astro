---
let isScrolled = false;

function handleScroll() {
  const scrollTop = window.scrollY;
  isScrolled = scrollTop > 10;
}
---

<!-- Navbar Component -->
<nav class={`fixed top-0 left-0 w-full z-50 transition-all duration-300 ${isScrolled ? 'bg-black/20 backdrop-blur-md shadow-md' : 'bg-transparent'}`}>
  <div class="max-w-7xl mx-auto px-4 py-6 sm:px-6 lg:px-8 flex justify-between items-center h-16">
    <!-- Logo -->
    <div class="flex-shrink-0">
      <a href="/">
        <img class="w-32" src="https://raw.githubusercontent.com/Integra-Meetings/integraMeetingsImagenes/main/IntegraMeetings_horizontal_negativo.png" alt="Logo" />
      </a>
    </div>
    <!-- Menu -->
    <div class="hidden md:flex space-x-8">
      <a href="#home" class="text-white hover:text-orange-600 font-bold">Home</a>
      <a href="#about" class="text-white hover:text-orange-600 font-bold">About</a>
      <a href="#services" class="text-white hover:text-orange-600 font-bold">Services</a>
      <a href="#contact" class="text-white hover:text-orange-600 font-bold">Contact</a>
    </div>
    <!-- Mobile Menu Button -->
    <div class="md:hidden">
      <button class="text-gray-800 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white">
        <!-- Mobile Menu Icon -->
        <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
</nav>

<!-- Optional content -->
<main>
  <!-- Your content here -->
</main>

<!-- JavaScript for handling the scroll event -->
<script>
  if (typeof window !== 'undefined') {
    window.addEventListener('scroll', function () {
      const nav = document.querySelector('nav');
      if(nav){
        if (window.scrollY > 10) {
        nav.classList.add('bg-white/20', 'backdrop-blur-md', 'shadow-md');
      } else {
        nav.classList.remove('bg-white/20', 'backdrop-blur-md', 'shadow-md');
      }
      }
    });
  }
</script>
