---
// Importa Layout y ImageHeader
import Layout from "../layouts/Layout.astro";
import ImageHeader from "../components/ImageHeader.astro";

// Importa Swiper CSS
import "swiper/swiper-bundle.css";
---

<style>
  .swiper-container{
    overflow-x: hidden;
  }
</style>

<Layout title="Integra Meetings EU">
  <main>
    <header>
      <div class="swiper-container">
        <div class="swiper-wrapper">
          <div class="swiper-slide">
            <ImageHeader
            imageUrl="https://raw.githubusercontent.com/Integra-Meetings/integraMeetingsImagenes/main/our.png"
            text="Maximize the success and profitability of your events with Integra Meetings. We are experienced experts in medical conferences, corporate conventions and B2B exhibitions. We believe in freeing up our clients time to focus on the essentials while we take care of the rest."
            title="INTEGRA MEETINGS"
          />
          </div>
          <div class="swiper-slide">
            <ImageHeader
          imageUrl="https://www.apple.com/newsroom/images/tile-images/Apples-keynote-event_tim_cook_03252019.jpg.og.jpg?202408211741"
          text=`At Integra Meetings, we combine innovation and experience to deliver tailormade event
          solutions. Our professional, modern, and personalized approach ensures exceptional results in every
          project.`
          title="ABOUT US"
        />
          </div>
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination"></div>
      </div>
    </header>
   
   
  </main>
</Layout>

<script>
  // Importa Swiper y sus m√≥dulos
  import Swiper from "swiper";
  import { Navigation, Pagination } from "swiper/modules";

  const swiper = new Swiper(".swiper-container", {
    modules: [Navigation, Pagination],
    autoplay:true,
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    slidesPerView: 1,
  });


</script>
