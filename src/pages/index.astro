---
// Importa Layout y ImageHeader
import Layout from "../layouts/Layout.astro";
import ImageHeader from "../components/ImageHeader.astro";
import CardLarge from "../components/CardLarge.astro";
import ContactForm from "../components/ContactForm.astro";
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";

// Importa Swiper CSS
import "swiper/swiper-bundle.css";
---

<style>
  .swiper-container {
    overflow-x: hidden;
  }
</style>

<Layout title="Integra Meetings">
  <main>
    <NavBar />

    <header class="m-0" id="home">
      <div class="swiper-container">
        <div class="swiper-wrapper">
          <div class="swiper-slide">
            <ImageHeader
              imageUrl="https://raw.githubusercontent.com/Integra-Meetings/integraMeetingsImagenes/main/ourCompress.png"
              text="Maximiza el éxito y la rentabilidad de tus eventos con Integra Meetings. Somos expertos con amplia experiencia en congresos médicos, convenciones corporativas y exposiciones B2B. Creemos en liberar el tiempo de nuestros clientes para que se concentren en lo esencial, mientras nosotros nos encargamos de todo lo demás."
              title="INTEGRA MEETINGS"
            />
          </div>
          <div class="swiper-slide">
            <ImageHeader
              imageUrl="https://raw.githubusercontent.com/Integra-Meetings/integraMeetingsImagenes/main/b2b.png"
              text=`En Integra Meetings, combinamos innovación y experiencia para ofrecer soluciones a medida en la organización de eventos. Con un enfoque profesional, moderno y personalizado garantizamos resultados excepcionales en cada proyecto`
              title="NOSOTROS"
            />
          </div>
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination"></div>
      </div>
    </header>

    <section class="w-full p-0 m-0">
      <CardLarge
        url="/congreso"
        imageUrl="https://raw.githubusercontent.com/Integra-Meetings/integraMeetingsImagenes/main/Congreso%20Medico2.png"
        title="Congreso Médico"
        color="146, 138, 81"
      />
      <CardLarge
        url="/convenciones"
        imageUrl="https://raw.githubusercontent.com/Integra-Meetings/integraMeetingsImagenes/main/Convenciones_corp.png"
        title="Covenciones Corporativas"
        color="173, 85, 76"
      />
      <CardLarge
        url="/b2b"
        imageUrl="https://raw.githubusercontent.com/Integra-Meetings/integraMeetingsImagenes/main/B2B_color.png"
        title="Exposiciones B2B"
        color="25, 47, 93"
      />
      <CardLarge
        url="/proceso"
        imageUrl="https://raw.githubusercontent.com/Integra-Meetings/integraMeetingsImagenes/main/process-color-banner1.png"
        title="Nuestro Proceso"
        color="173, 85, 76"
      />
    </section>

    <ContactForm />
    <Footer />
  </main>
</Layout>

<script>
  // Importa Swiper y sus módulos
  import Swiper from "swiper";
  import { Navigation, Pagination } from "swiper/modules";

  const swiper = new Swiper(".swiper-container", {
    modules: [Navigation, Pagination],
    autoplay: true,
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    slidesPerView: 1,
  });
</script>
